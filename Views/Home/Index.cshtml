@{
    ViewData["Title"] = "Home Page";
}
@model ProjectListViewModel


@foreach (var x in Model.Projects) //for each variable in the model list it out
{
<div class="card card-outline-primary m-1 p1">
    <div class="bg-faded p-1">
        <h4> Title: @x.Title</h4> <! --listing title -->
        <p>Author: @x.Author @x.AuthorMiddle @x.AuthorLast </p> <! --listing author -->
        <p>Publisher: @x.Publisher</p> <! --listing publisher -->
        <p>ISBN: @x.ISBN</p> <! --listing isbn -->
        <p>Category: @x.Category</p> <! --listing category -->
        <p>Classification: @x.Classification</p>
        <p>Number of Pages: @x.PageNum</p> <! -- Number of pages -->
        <p>Price: @x.Price</p> <! --listing price -->
    </div>

</div>
}

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>